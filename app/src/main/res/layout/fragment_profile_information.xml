<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".ui.ProfileInformationFragment">

    <TextView
        android:id="@+id/tv_brand_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/tv_username_label"
        android:textColor="@color/matterhorn"
        android:textSize="@dimen/font16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginEnd="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/tv_driver_name"
        android:textColor="@color/grey_2"
        android:textSize="@dimen/font16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_username"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimenHalf"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_brand_label"
        app:layout_constraintTop_toBottomOf="@id/tv_brand_label" />

    <TextView
        android:id="@+id/tv_police_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/tv_phone_number"
        android:textColor="@color/matterhorn"
        android:textSize="@dimen/font16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_username" />

    <TextView
        android:id="@+id/tv_police_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginEnd="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/phone_number"
        android:textColor="@color/grey_2"
        android:textSize="@dimen/font16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_username" />

    <View
        android:id="@+id/line_phone"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimenHalf"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_police_number_label"
        app:layout_constraintTop_toBottomOf="@id/tv_police_number_label" />

    <TextView
        android:id="@+id/tv_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/tv_email"
        android:textColor="@color/matterhorn"
        android:textSize="@dimen/font16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_phone" />

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginEnd="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/email"
        android:textColor="@color/grey_2"
        android:textSize="@dimen/font16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_phone" />

    <View
        android:id="@+id/line_email"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimenHalf"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_color_label"
        app:layout_constraintTop_toBottomOf="@id/tv_color_label" />

    <TextView
        android:id="@+id/tv_driving_license_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginBottom="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/tv_password"
        android:textColor="@color/matterhorn"
        android:textSize="@dimen/font16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_email" />

    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin16dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/hint_password"
        android:textColor="@color/grey_2"
        android:textSize="@dimen/font16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_driving_license_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_driving_license_label" />

</androidx.constraintlayout.widget.ConstraintLayout>